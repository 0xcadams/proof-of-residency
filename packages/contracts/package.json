{
  "name": "@proof-of-residency/contracts",
  "version": "0.0.1",
  "description": "The Solidity smart contracts for Proof of Residency.",
  "private": true,
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "analyze": "yarn lint && slither . --filter-paths \"@openzeppelin\"",
    "build": "yarn clean && yarn compile",
    "clean": "yarn hardhat clean",
    "compile": "yarn hardhat compile",
    "coverage": "yarn build && yarn hardhat coverage --temp artifacts",
    "deploy:rinkeby": "yarn hardhat run --network rinkeby scripts/initial-deploy.ts",
    "deploy:local": "yarn hardhat run --network localhost scripts/initial-deploy.ts",
    "test:local": "yarn hardhat run --network localhost scripts/test.ts",
    "lint": "solhint 'contracts/**/*.sol' && prettier --list-different 'contracts/**/*.sol' && eslint . --ext .ts",
    "size": "yarn hardhat size-contracts",
    "start": "hardhat node",
    "test": "yarn hardhat test"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.3",
    "@nomiclabs/hardhat-etherscan": "^2.1.7",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/hardhat-upgrades": "^1.12.0",
    "@openzeppelin/test-helpers": "^0.5.15",
    "@typechain/ethers-v5": "^8.0.2",
    "@typechain/hardhat": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.2",
    "hardhat": "^2.7.0",
    "hardhat-contract-sizer": "^2.1.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.17",
    "typechain": "^6.0.5"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.4.2"
  }
}
